@model RCLocacoes.Web.Mvc.Models.LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RCLocacoes.Web.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="px-5 ms-xl-4">
                        <i class="bi bi-box-seam-fill" style="color: #494ca2; font-size:40px; margin-right:10px;"></i>
                        <span class="h1 fw-bold mb-0">RC Locações</span>
                    </div>

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                        <form style="width: 23rem;" asp-controller="Access" asp-action="Login" method="post" id="formLogin">

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                            <div class="form-group form-outline mb-4">
                                <input type="email" class="form-control form-control-lg" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email">
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>

                            <div class="form-group form-outline mb-4">
                                <input type="password" class="form-control form-control-lg" id="InputPassword" placeholder="Password" asp-for="Password">
                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                            </div>

                            <div class="form-check form-outline mb-4">
                                <input class="form-check-input" type="checkbox" id="flexCheckChecked" asp-for="KeepLoggedIn">
                                <label class="form-check-label" for="flexCheckChecked">
                                    Keep Logged In?
                                </label>
                            </div>

                            <div class="pt-1 mb-4 d-grid gap-2">
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                            </div>

                            <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#">Forgot password?</a></p>
                            <p>Don't have an account? <a class="link-info" id="btnRegister">Register here</a></p>

                        </form>

                        <form style="width: 23rem; display:none;" asp-controller="Access" asp-action="Create" method="post" id="formCreate">

                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>

                            <div class="form-group form-outline mb-4">
                                <input type="email" class="form-control form-control-lg" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email">
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>

                            <div class="form-group form-outline mb-4">
                                <input type="password" class="form-control form-control-lg" id="InputPassword" placeholder="Password" asp-for="Password">
                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                            </div>

                            <div class="pt-1 mb-4">
                                <button class="btn btn-secondary btn-lg btn-block" type="button" id="btnBack">Back</button>
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Create account</button>
                            </div>

                        </form>
                    </div>

                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="https://picsum.photos/1280/1920"
                         alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

<style>
    .bg-image-vertical {
        position: relative;
        overflow: hidden;
        background-repeat: no-repeat;
        background-position: right center;
        background-size: auto 100%;
    }

    @@media (min-width: 1025px) {
        .h-custom-2 {
            height: 100%;
        }
    }
</style>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $("#btnRegister").click(function () {
        $("#formLogin").toggle();
        $("#formCreate").toggle();
    });

    $("#btnBack").click(function () {
        $("#formCreate").toggle();
        $("#formLogin").toggle();
    });
</script>